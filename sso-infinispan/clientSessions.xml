<infinispan>
    <cache-container>
        <distributed-cache name="clientSessions" mode="SYNC" start="EAGER">
            <backups>
                <backup site="c2" strategy="SYNC">
                    <take-offline min-wait="120000"/>
                </backup>
            </backups>
            <transaction mode="NONE" locking="PESSIMISTIC"/>
            <locking acquire-timeout="0" />
        </distributed-cache>
    </cache-container>
</infinispan>